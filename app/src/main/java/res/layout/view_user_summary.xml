        <TextView android:ellipsize="2" android:gravity="10" android:id="@id/user_name" android:padding="0dp" android:layout_marginLeft="13dp" android:singleLine="true" android:layout_toLeftOf="@id/btn_notification" android:layout_toRightOf="@id/user_avatar" android:layout_alignTop="@id/user_avatar" android:layout_alignBottom="@id/user_avatar" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" style="@style/AppWidget_Text_Title_Page" />
