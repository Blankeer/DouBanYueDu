            <TextView android:id="@id/own_number" android:paddingRight="@dimen/page_horizontal_padding" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/AppWidget_Text_Secondary" />
        </RelativeLayout>
        <LinearLayout android:orientation="1" android:id="@id/author_block" android:layout_width="-1" android:layout_height="-2">
            <View android:layout_marginLeft="@dimen/padding_left_navigation_sub_menu_item" style="@style/AppWidget_Divider_Horizontal" />
            <RelativeLayout android:id="@id/btn_composed" android:layout_width="-1" android:layout_height="-2" style="@style/Drawer_MenuItem">
                <TextView android:paddingLeft="@dimen/padding_left_navigation_sub_menu_item" android:text="@string/btn_composed" android:layout_centerVertical="true" style="@style/Drawer_MenuItem_Small" />
                <TextView android:id="@id/composed_number" android:paddingRight="@dimen/page_horizontal_padding" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/AppWidget_Text_Secondary" />
            </RelativeLayout>
        </LinearLayout>
