        <View android:layout_marginLeft="@dimen/padding_left_navigation_sub_menu_item" style="@style/AppWidget_Divider_Horizontal" />
        <RelativeLayout android:id="@id/btn_own" android:layout_width="-1" android:layout_height="-2" style="@style/Drawer_MenuItem">
