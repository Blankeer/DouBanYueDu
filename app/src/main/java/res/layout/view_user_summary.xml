<?xml version="1.0" encoding="utf-8"?>
<merge>
    <RelativeLayout android:paddingLeft="@dimen/page_horizontal_padding" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="@dimen/general_subview_vertical_padding_medium">
